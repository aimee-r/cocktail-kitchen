<div class="form">
  <div class="row justify-content-center">
    <div class="col-4">
      <h1>Create a new cocktail</h1>

      <%= simple_form_for @cocktail do |f| %>
        <%= f.input :name %>
        <%= f.button :submit, class: 'btn btn-primary' %>
      <% end %>
    </div>
  </div>
  <%= link_to "Back to all cocktails", root_path %>
</div>


