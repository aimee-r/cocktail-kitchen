
 <div class="banner" style="background-image: url(https://st3.depositphotos.com/14051716/18156/v/600/depositphotos_181568132-stock-video-circles-soft-pastel-colors-shape.jpg);">
  <div class="container">
    <h1>Cocktail Kitchen</h1>
    <p>Make the perfect cocktails at home</p>
      <%= link_to "Add a cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
</div>

<div class="container">
  <div class="row">
    <% @cocktails.each do |cocktail| %>
      <div class="col-12 col-md-6 col-lg-3">
        <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('https://source.unsplash.com/500x400/?cocktail');">
          <div class="card-description">
            <h2><%= link_to cocktail.name, cocktail %></h2>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
